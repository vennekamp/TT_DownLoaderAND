<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/_main_activity__comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tt_downloader"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:scrollbars="vertical">

        <Button
            android:id="@+id/buttonSearchComments"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/strSearchComment" />

        <TextView
            android:id="@+id/textViewSearchTextComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonSearchComments"
            android:text="@string/searchTextComment"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Black" />

        <AutoCompleteTextView
            android:id="@+id/editTextSuchtextKommentare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewSearchTextComments"
            android:layout_alignStart="@+id/textViewSearchTextComments"
            android:layout_alignLeft="@+id/textViewSearchTextComments"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:hint="@string/strSearchComment"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:selectAllOnFocus="false" />

        <TextView
            android:id="@+id/textViewGebiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextSuchtextKommentare"
            android:layout_alignStart="@+id/editTextSuchtextKommentare"
            android:layout_alignLeft="@+id/editTextSuchtextKommentare"
            android:text="@string/lblGebiet"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Black" />

        <Spinner
            android:id="@+id/spinnerAreaComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewGebiet"
            android:layout_alignStart="@+id/textViewGebiet"
            android:background="@drawable/edittext_background"
            android:layout_alignLeft="@+id/textViewGebiet" />

        <TextView
            android:id="@+id/textViewLimitsForScale4CommentSearch"
            android:layout_below="@+id/spinnerAreaComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="@string/strLimitForScale"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Black"
            android:layout_alignParentStart="true" />

        <com.crystal.crystalrangeseekbar.widgets.BubbleThumbRangeSeekbar
            android:id="@+id/rangeSeekbarLimitsForScale4CommentSearch"
            android:layout_below="@+id/textViewLimitsForScale4CommentSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:min_value="0"
            app:max_value="250"
            app:steps="1"
            app:bar_color="@color/TT_FG_BLUE"
            app:bar_highlight_color="@color/TT_BG_BLUE"
            app:left_thumb_image="@drawable/seek_thumb_normal"
            app:right_thumb_image="@drawable/seek_thumb_normal"
            app:left_thumb_image_pressed="@drawable/seek_thumb_pressed"
            app:right_thumb_image_pressed="@drawable/seek_thumb_pressed"
            app:data_type="_integer"/>

        <TextView
            android:id="@+id/TextViewCommmentGrading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rangeSeekbarLimitsForScale4CommentSearch"
            android:layout_alignStart="@+id/rangeSeekbarLimitsForScale4CommentSearch"
            android:layout_alignLeft="@+id/rangeSeekbarLimitsForScale4CommentSearch"
            android:text="@string/strMinGradingInComment"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Black" />

        <SeekBar
            android:id="@+id/seekBarMinGradingInComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextViewCommmentGrading"
            android:layout_alignStart="@+id/TextViewCommmentGrading"
            android:layout_alignLeft="@+id/TextViewCommmentGrading"
            android:max="@integer/Six"
            android:progress="@integer/Zero" />

    </RelativeLayout>

</ScrollView>