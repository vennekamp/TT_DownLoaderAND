<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/route_activity_found_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill"
    android:background="@color/Green"
    android:clipToPadding="true"
    android:gravity="fill"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbars="none">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_tableCol_RouteName_inComment_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tableCol_RouteName"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/Black"
                android:textSize="@dimen/lv_header" />

            <TextView
                android:id="@+id/textView_tableCol_SummitName_inComment_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:focusable="false"
                android:text="@string/tableCol_SummitName"
                android:textColor="@color/Black"
                android:textSize="@dimen/header_small" />

            <LinearLayout
                android:id="@+id/linearlayout_SpinnerRouteAsscended_RouteAscendDay_inComment_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="1.0">

                <Spinner
                    android:id="@+id/spinnerRouteAsscended_inComment_route"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight=".5"
                    android:focusable="false"
                    android:text="@string/tableCol_RouteIsAscended"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/header_small" />

                <Button
                    android:id="@+id/buttonRouteAscendDay_route"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight=".5"
                    android:text="@string/strNoDay"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/header_small" />
            </LinearLayout>

            <EditText
                android:id="@+id/editTextMyRouteComment_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:configChanges="orientation|keyboardHidden"
                android:gravity="start|end"
                android:hint="@string/tableCol_MyComment"
                android:inputType="text|textAutoCorrect|textAutoComplete|textMultiLine"
                android:lines="4"
                android:background="@drawable/edittext_background"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical"
                android:selectAllOnFocus="false"
                android:text="@string/tableCol_MyComment" />

            <Button
                android:id="@+id/share_btn"
                style="@style/Widget.MaterialComponents.Button"
                android:drawableLeft="@android:drawable/ic_menu_share"
                android:drawableStart="@android:drawable/ic_menu_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/strGpcCoords"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/Black"
                android:padding="@dimen/controls_margin"
                android:gravity="start|center_vertical" />

            <View
                android:id="@+id/space1_route"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_routes_in_routes_found_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/Black"
                tools:nestedScrollingEnabled="false"
                tools:listitem="@layout/routes_lv_item_found" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>